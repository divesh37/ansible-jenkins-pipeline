pipeline{
    agent any
    stages{
        stage('Initiating Live Pipeline'){
            steps{
                echo 'Starting Pipeline'
                echo '${p_path}'
            }
        }
        stage('Clone') {
            steps {
                echo 'deploying...'
                ansiColor('xterm'){
                    ansiblePlaybook(
                        playbook: 'prisma_live.yml',
                        inventory: 'ansible-config/inventory.inv',
                        credentialsId: '226_docker',
#                        skippedTags: 'elasticsearch_restart,reindex_all,dynamic_cmd',
			tags: cache_flush
                        colorized: true,
                        extraVars: [
                              project_path: '${p_path}',
			      composefile: '${composefile}',
                              branch: '${select_branch}',
                              repository: '${Repository}'
                        ])
                 }
            }
        }
        stage('Setup Upgrade') {
            steps {
                ansiColor('xterm'){
                    ansiblePlaybook(
                        playbook: 'prisma_live.yml',
                        inventory: 'ansible-config/inventory.inv',
                        credentialsId: '226_docker',
        #                skippedTags: 'elasticsearch_restart,reindex_all,dynamic_cmd',
			tags: cache_flush
                        colorized: true,
                        extraVars: [
                              project_path: '${p_path}',
                              composefile: '${composefile}',
                              branch: '${select_branch}',
                              repository: '${Repository}'
                        ])  
                 }   
            }   
        } 
    }
    post {
        always {
          step([$class: 'Mailer',
            notifyEveryUnstableBuild: true,
            recipients: "${email}",
            sendToIndividuals: true])
        }
    }
}
