pipeline{
    agent any
    stages {
        stage('Sending Build Notification') {
            steps {
                mail to: '${email}',   
                    subject: "Job $JOB_NAME " ,
                    body: """Build started.                 
                    Go to $BUILD_URL to check the running status."""
            }
        }
    }
    stages{
        stage('Initiating Pipeline'){
            steps{
                echo 'Starting Pipeline'
                echo '${p_path}'
            }
        }
        stage('Deploy') {
            steps {
                echo 'deploying...'
                ansiColor('xterm'){
                    ansiblePlaybook(
                        playbook: 'alfaHN.yml',
                        inventory: 'ansible-config/inventory.inv',
                        credentialsId: '226_docker',
                        skippedTags: 'elasticsearch_restart,reindex_all,dynamic_cmd',
                        colorized: true,
                        extraVars: [
                              project_path: '${p_path}',
			                  composefile: '${composefile}',
                              branch: '${select_branch}',
                              repository: '${Repository}'
                        ])
                 }
            }
        }
    }
    post {
        always {
          step([$class: 'Mailer',
            notifyEveryUnstableBuild: true,
            recipients: "${email}",
            sendToIndividuals: true])
        }
      }
}
